{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/test/**/*.e2e-spec.{ts,js}"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.(t|j)s"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "test-config",
    ".module.ts",
    "src/main.ts",
    "src/mocks",
    ".spec.ts"
  ],
  "coverageDirectory": "./coverage-e2e"
}